extends ../base/skeleton
block body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-primary.fixed-top
        div.navbar-brand(href='#')
            p.navbar-title GeekRank
            span.navbar-cursor |
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
            span.navbar-toggler-icon
        div.collapse.navbar-collapse(id="navbarNavDropdown")                              
            ul.navbar-nav.ml-auto
                li.nav-item
                    a.card-link.text-light(href="/logout") Logout
    .row
        .col-md-3.ml-5.pt-4
            h3(style={color:"#303132","font-family":'Lato',"font-weight":"700"})=title
            .row.ml-1
                span.badge.badge-pill.badge-success(style={height:"25px",width:"25px"})    &nbsp;
                span.text-secondary.text-center.ml-2=level
            p.text-secondary.ml-3.mt-3=description
            h5.mt-4 Input format:
            p.text-secondary.pl-3=input
            h5.mt-4 Output format:
            p.text-secondary.ml-3=output
        .col-md-7.pt-4
            .row.ml-4
                h2.col-md-6 Editor
                h3.col-md-3.text-right Language
                .col-md-3.dropdown
                    select.custom-select.bg-light.text-dark.align-self-end(id="languageSelector") Select
                        option(href="#") C
                        option(href="#") Python 3
                .col-md-11.card.mt-2.ml-3(style={height:"60%",width:"80%"})
                    pre#editor 
                .col-md-11.mt-3
                    button.btn.btn-outline-primary.float-right(onclick="submitCode()") Submit
    script(src="/js/src-noconflict/ace.js",type="text/javascript" charset="utf-8")
    script.
        var editor = ace.edit("editor")
        editor.session.setValue('#include <stdio.h>\nint main(){\n//Your code here\nreturn 0;\n}')
        editor.gotoLine(3)
        editor.setTheme("ace/theme/dracula")
        editor.session.setMode("ace/mode/c_cpp")
        editor.setShowPrintMargin(false)
        editor.session.setUseWrapMode(true)
        editor.setHighlightActiveLine(false)
        



                            


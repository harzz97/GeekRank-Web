extends ./base/skeleton
block body
    .container
      .row.main-container.d-flex.align-items-center
        .col-6(style='text-align:center;top:15%')
          p.page_title GeekRank
          span.blinking_cursor |
          br
          //
            <span class="motivation_one">Become a better</span>
            </br>
            <span class="motivation_two">Programmer</span>
        .col-6
          .col-12.login-signup-container.p-0
            ul.nav.nav-tabs(role='tablist')
              li.nav-item.text-center(style='width: 50%;')
                a#signup-tab.nav-link(data-toggle='tab', href='#signup', role='tab', aria-controls='signup', aria-selected='false') Signup
              li.nav-item.text-center(style='width: 50%;')
                a#login-tab.nav-link.active(data-toggle='tab', href='#login', role='tab', aria-controls='login', aria-selected='true') Login
            .tab-content
              #signup.tab-pane.fade.p-4(role='tabpanel', aria-labelledby='signup-tab')
                form#registerForm(method="post")
                  .form-group
                    //- label(for='signupEmail') Email address
                    input#signupEmail.form-control(type='email', placeholder='Email',required)
                  .form-group
                    //- label(for='signupUserId') Username
                    input#signupUsername.form-control(type='text', placeholder='Username',required)
                  .form-group
                    //- label(for='signupPassword') Password
                    input#signupPassword.form-control(type='password', placeholder='Your Password',required)
                  button.btn.btn-outline-primary.float-right(type="submit",onClick='registerUser()') Signup
                  .clearfix
                  //-   label(for='signupCPassword') Confirm Password
                  //-   input#signupCPassword.form-control(type='password', placeholder='Confirm Password')
                    
              #login.tab-pane.fade.show.active.p-4(role='tabpanel', aria-labelledby='login-tab')
                form#loginForm(method="post",action="/api/account/login")
                    .form-group
                        //- label(for='loginEmail') Email Address
                        input#loginUsername.form-control(type='text', aria-describedby='usernameHelp', placeholder='Your username',name='username',required) 
                    .form-group
                        //- label(for"loginpassword"='') Password
                        input#loginPassword.form-control(type='password', aria-describedby='passwordHelp', placeholder='Your Password',name='password',required)
                    button.btn.btn-outline-primary.float-right Login
                    .clearfix
